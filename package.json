{
  "name": "shifra-api",
  "version": "0.1.0",
  "main": "src/handler.js",
  "license": "MIT",
  "scripts": {
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy": "export NODE_ENV=dev && yarn deploy:env",
    "deploy:production": "export NODE_ENV=production && yarn deploy:env",
    "deploy:stage": "export NODE_ENV=stage && yarn deploy:env",
    "lint": "eslint ./src",
    "precommit": "lint-staged",
    "serve": "serverless offline start",
    "test": "jest --watch"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "serverless": "^1.27.0",
    "serverless-offline": "^3.20.3",
    "serverless-webpack": "^5.1.3",
    "webpack": "^4.6.0",
    "webpack-node-externals": "^1.7.2",
    "yarn": "^1.6.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint -- --fix",
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  }
}
