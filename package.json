{
  "name": "shifra-api",
  "version": "0.1.0",
  "main": "src/handler.js",
  "license": "MIT",
  "scripts": {
    "deploy": "sls deploy --stage dev -v",
    "deploy:production": "sls deploy --stage production -v",
    "deploy:stage": "sls deploy --stage stage -v",
    "dispose": "sls remove --stage dev -v",
    "dispose:production": "sls remove --stage production -v",
    "dispose:stage": "sls remove --stage stage -v",
    "lint": "eslint ./src",
    "precommit": "lint-staged && yarn flow check && yarn test",
    "serve": "serverless offline start",
    "test": "jest"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.71.0",
    "flow-typed": "^2.4.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "serverless": "^1.27.0",
    "serverless-offline": "^3.20.3",
    "serverless-webpack": "^5.1.3",
    "webpack": "^4.6.0",
    "webpack-node-externals": "^1.7.2",
    "yarn": "^1.6.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint -- --fix",
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
